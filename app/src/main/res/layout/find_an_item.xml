<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/coloricon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wish to Buy something? 'Choose from listed Categories'"
            android:textStyle="italic"
            android:layout_marginStart="20dp"/>
        <Button
            android:id="@+id/HomeButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_home_black_24dp"
            android:text="Furniture"
            android:layout_marginTop="20dp"
            android:layout_marginStart="130dp"/>
        <Button
            android:id="@+id/VehiclesButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_drive_eta_black_24dp"
            android:text="Vehicles"
            android:layout_marginStart="130dp"/>
        <Button
            android:id="@+id/FashionButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_supervisor_account_black_24dp"
            android:text="Fashion"
            android:layout_marginStart="130dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="255dp"
        android:padding="20dp">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>